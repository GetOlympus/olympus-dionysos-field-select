{% extends template_path %}

{% block id %}{{ id }}_select{% endblock %}
{% block label %}<label for="{{ id }}">{{ title|raw }}</label>{% endblock %}

{% block field %}
    <div class="olh-field-content select">
        {% if options %}
            <select name="{{ id }}" id="{{ id }}">
                {% for key, option in options if key %}
                    {% set selected = key == val ? true : false %}
                    <option value="{{ key == '-1' ? '' : key }}"{{ selected ? ' selected="selected"' : '' }}>{{ option }}</option>
                {% endfor %}
            </select>
        {% else %}
            {{ t_no_options }}
        {% endif %}
    </div>
{% endblock %}

{% block description %}
    {{ description|raw }}
{% endblock %}
